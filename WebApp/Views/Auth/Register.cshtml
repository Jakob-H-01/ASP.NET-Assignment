@{
	Layout = "_CleanLayout";
	ViewData["Title"] = "Register";
}

<div class="center">
    <form action="" class="user-form">
        <h1 class="primary-heading">Create Account</h1>
        <div class="form-content">
            <button class="btn btn-gray btn-form btn-google"><img src="~/images/google-icon.svg" alt="">Sign Up with Google</button>
            <div class="divider">OR</div>
            <div class="form-inner">
                <label class="fw-semi-bold" for="">Full Name</label>
                <div class="field-container">
                    <input class="input-field" type="text" name="" id="" placeholder="Your full name">
                    <span></span>
                </div>
            </div>
            <div class="form-inner">
                <label class="fw-semi-bold" for="">Email</label>
                <div class="field-container">
                    <input class="input-field" type="email" name="" id="" placeholder="Your email address">
                    <span></span>
                </div>
            </div>
            <div class="form-inner">
                <label class="fw-semi-bold" for="">Password</label>
                <div class="field-container">
                    <input class="input-field" type="password" name="" id="" placeholder="Enter your password">
                    <span></span>
                    <button class="btn-icon form-icon-container right"><img src="~/images/hide.svg" alt=""></button>
                </div>
            </div>
            <div class="form-inner">
                <label class="fw-semi-bold" for="">Confirm Password</label>
                <div class="field-container">
                    <input class="input-field" type="password" name="" id="" placeholder="Confirm your password">
                    <span></span>
                    <button class="btn-icon form-icon-container right"><img src="~/images/hide.svg" alt=""></button>
                </div>
            </div>
            <div class="checkbox-container">
                <input type="checkbox" name="" id="">
                <span class="checkbox"></span>
                <label class="fw-regular" for="">I accept <a class="text-blue" href="#">Terms and Conditions</a></label>
            </div>
            <a class="btn btn-blue btn-form" asp-action="Login" asp-controller="Auth">Create Account</a>
        </div>
        <p class="fw-semi-bold">Already have an account? <a class="text-blue" asp-action="Login" asp-controller="Auth">Login</a></p>
    </form>
</div>