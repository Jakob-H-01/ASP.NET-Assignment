@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Login";
}

<div class="split-screen-grid">
    <div class="left-col text-white">
        <h1 class="primary-display text-white">Welcome to <span class="text-orange">Admin Panel</span></h1>
        <p class="text-white">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus ullamcorper nisl erat, vel convallis elit fermentum pellentesque. Sed mollis velit facilisis facilisis viverra.</p>
    </div>
    <div class="right-col">
        <form action="" class="user-form">
            <h2 class="primary-heading">Login</h2>
            <div class="form-content">
                <button class="btn btn-gray btn-form btn-google"><img src="~/images/google-icon.svg" alt="">Login with Google</button>
                <div class="divider">OR</div>
                <div class="input-container">
                    <label class="fw-semi-bold" for="">Email</label>
                    <input class="input-field" type="email" name="" id="" placeholder="Your email address">
                </div>
                <div class="input-container">
                    <label class="fw-semi-bold" for="">Password</label>
                    <input class="input-field" type="password" name="" id="" placeholder="Enter your password">
                    <button class="btn-icon form-icon"><img src="~/images/hide.svg" alt=""></button>
                </div>
                <div class="flex-sb">
                    <div class="checkbox-container">
                        <input type="checkbox" name="" id="">
                        <span class="checkbox"></span>
                        <label for="">Remember Me</label>
                    </div>
                    <a class="text-blue" href="#">Forgot Password?</a>
                </div>
                <a class="btn btn-blue btn-form" asp-action="TeamMembers" asp-controller="Admin">Log In</a>
            </div>
        </form>
    </div>
</div>